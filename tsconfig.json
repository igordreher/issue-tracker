{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs", 
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./dist", 
    "rootDirs": ["./src", "./__tests__"],
    "strict": true, 
    "moduleResolution": "node", 
    "baseUrl": "./src",
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  }
}